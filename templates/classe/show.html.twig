{% extends 'base.html.twig' %}

{% block title %}Classe{% endblock %}

{% block body %}
    <h1>Classe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ classe.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ classe.nom }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img id="image" src="{{ asset('img/course/small/'~ classe.image) }}"  
                            class="card-img card-img-horizontal-lg sh-18 sw-lg-16 h-lg-100"></td>
            </tr>
            <tr>
            <th>Enseignant</th>
            <td>{{ classe.idEnseignant }}</td>
            </tr>
            <tr>
            <th>Apprenant</th>
            <td>{{ classe.idApprenant }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_classe_index') }}">back to list</a>

    <a href="{{ path('app_classe_edit', {'id': classe.id}) }}">edit</a>

    {{ include('classe/_delete_form.html.twig') }}
{% endblock %}
