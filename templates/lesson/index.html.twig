{% extends 'base.html.twig' %}

{% block title %}Lesson index{% endblock %}

{% block body %}
    <h1>Lesson index</h1>

    <table class="table">
        <thead>
            <tr>
                
                <th>Nom</th>
                <th>Image</th>
                <th>Cours</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lesson in lessons %}
            <tr>
                
                <td>{{ lesson.nom }}</td>
                <td>
                <img id="image" src="{{ asset('img/course/small/'~ lesson.image) }}"  
                            class="card-img card-img-horizontal-lg sh-18 sw-lg-16 h-lg-100">  </td>
                            <td>{{ lesson.idCours }}</td>
                <td>
                    <a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">show</a>
                    <a href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_lesson_new') }}">Create new</a>
{% endblock %}
